{
  "name": "OptMeowt",
  "version": "2.0.0",
  "description": "OptMeowt allows Web users to make use of their rights to opt out from the sale and sharing of personal data",
  "permissions": [
    "webRequest",
    "<all_urls>",
    "webRequestBlocking",
    "webNavigation",
    "storage",
    "activeTab",
    "cookies",
    "tabs"
  ],
  "icons": {
    "128": "assets/face-icons/icon128-face-circle.png"
  },
  "browser_action": {
    "default_title": "OptMeowt",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["bundle.background.js"]
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "json/*.json"
  ]
}
